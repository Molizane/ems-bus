[
	{
		"name": "/samples/glassfish/log/tail",
		"comment": "Show log of jboss",
		"owner": "samples",
		"version": "1.0.0",
		"service" : "ems_cmd_service:execute",
		"url": "/samples/glassfish/log/tail",
		"script" : [ "tail -300 {{GF_LOG}}" ],
		"content_type" : "text/plain",
		"type": "GET",
		"enable" : true,
		"result_cache" : 0,
		"lang" : "erlang"
	},

	{
		"name": "/samples/logger/cat/error",
		"comment": "Show log of jboss",
		"owner": "samples",
		"version": "1.0.0",
		"service" : "ems_cmd_service:execute",
		"url": "/samples/logger/cat/error",
		"script" : [ "find {{PRIV_PATH}}/log -type f -mtime -1 -name '*.log' | xargs sed '/Payload/, /Response/ d' | sed '/INFO/, /Status/ d'" ],
		"content_type" : "text/plain",
		"type": "GET",
		"enable" : false,
		"lang" : "erlang"
	},
	
	{
		"name": "/samples/jboss/log/tail",
