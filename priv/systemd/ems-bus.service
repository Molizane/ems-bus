[Unit]
Description=Enterprise service bus ERLANGMS
After=network.target epmd.service

[Service]
Type=simple
StandardOutput=journal
StandardError=journal
User=erlangms
Group=erlangms
WorkingDirectory=/usr/lib/ems-bus
Restart=always
RestartSec=3
ExecStart=/usr/lib/ems-bus/bin/ems-bus foreground
LimitNOFILE=500000
LimitNPROC=500000
PIDFile=/var/run/ems-bus.pid

[Install]
WantedBy=multi-user.target
